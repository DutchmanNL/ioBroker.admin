{
  "type": "tabs",
  "i18n": true,
  "items": {
    "mainTab": {
      "type": "panel",
      "label": {
        "en": "Main settings"
      },
      "items": {
        "bind": {
          "type": "ip",
          "listenOnAllPorts": true,
          "label": {
            "en": "IP"
          },
          "sm": 12,
          "md": 8,
          "lg": 5
        },
        "port": {
          "type": "number",
          "min": 1,
          "max": 65565,
          "label": {
            "en": "Port"
          },
          "sm": 12,
          "md": 4,
          "lg": 3
        },
        "secure": {
          "newLine": true,
          "type": "checkbox",
          "label": {
            "en": "Secure(HTTPS)"
          },
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "certPublic": {
          "type": "certificate",
          "hidden": "!data.secure",
          "certType": "public",
          "validator": "!data.secure || data.certPublic",
          "label": {
            "en": "Public certificate"
          },
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "certPrivate": {
          "hidden": "!data.secure",
          "type": "certificate",
          "certType": "private",
          "validator": "!data.secure || data.certPrivate",
          "label": {
            "en": "Private certificate"
          },
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "certChained": {
          "hidden": "!data.secure",
          "type": "certificate",
          "certType": "chained",
          "label": {
            "en": "Chained certificate"
          },
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "auth": {
          "newLine": true,
          "type": "checkbox",
          "label": {
            "en": "Authentication"
          },
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "defaultUser": {
          "hidden": "data.auth",
          "type": "user",
          "label": {
            "en": "Run as"
          },
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "ttl": {
          "hidden": "data.auth",
          "type": "number",
          "label": {
            "en": "Login timeout"
          },
          "help": {
            "en": "sec"
          },
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "autoUpdate": {
          "newLine": true,
          "type": "select",
          "label": {
            "en": "Auto update"
          },
          "options": [
            {"label": {"en": "manually"},       "value": 0},
            {"label": {"en": "every 12 hours"}, "value": 12},
            {"label": {"en": "every day"},      "value": 24},
            {"label": {"en": "every 2 days"},   "value": 48},
            {"label": {"en": "every 3 days"},   "value": 72},
            {"label": {"en": "every week"},     "value": 168},
            {"label": {"en": "every 2 weeks"},  "value": 336},
            {"label": {"en": "monthly"},        "value": 720}
          ],
          "sm": 12,
          "md": 6,
          "lg": 2
        },
        "thresholdValue": {
          "type": "number",
          "min": 50,
          "label": {
            "en": "Events threshold value"
          },
          "sm": 12,
          "md": 4,
          "lg": 3
        },
        "react": {
          "newLine": true,
          "type": "checkbox",
          "label": {
            "en": "Use react UI(experts)"
          },
          "sm": 12,
          "md": 6,
          "lg": 3
        }
      }
    },
    "leTab": {
      "type": "panel",
      "label": "Let's Encrypt SSL",
      "disabled": "!data.secure",
      "items": {
        "_image": {
          "type": "staticImage",
          "tooltip": {
            "en": "Read about Let's Encrypt certificates"
          },
          "href": "https://github.com/ioBroker/ioBroker.admin/blob/master/README.md#lets-encrypt-certificates",
          "src": "../../img/le.png",
          "style": {
            "width": 200,
            "height": 59
          }
        },
        "_link": {
          "newLine": true,
          "type": "staticLink",
          "href": "https://github.com/ioBroker/ioBroker.admin/blob/master/README.md#lets-encrypt-certificates",
          "text": {
            "en": "Read about Let's Encrypt certificates"
          },
          "style": {
            "fontSize": 16,
            "marginBottom": 20
          }
        },
        "leEnabled": {
          "newLine": true,
          "type": "checkbox",
          "label": {
            "en": "Use Lets Encrypt certificates"
          }
        },
        "leUpdate": {
          "newLine": true,
          "type": "checkbox",
          "hidden": "!data.leEnabled",
          "label": {
            "en": "Use this instance for automatic update"
          }
        },
        "lePort": {
          "newLine": true,
          "sm": 11,
          "lg": 4,
          "type": "number",
          "hidden": "!data.leEnabled || !data.leUpdate",
          "label": {
            "en": "Port to check the domain"
          },
          "style": {
            "marginTop": 15,
            "maxWidth": 200
          }
        }
      }
    },
    "loginTab": {
      "type": "panel",
      "label": {
        "en": "Login background"
      },
      "disabled": "!data.auth",
      "items": {
        "loginBackgroundColor": {
          "type": "color",
          "sm": 12,
          "md": 8,
          "lg": 4,
          "label": {
            "en": "Background color of the login screen"
          }
        },
        "loginHideLogo": {
          "newLine": true,
          "sm": 12,
          "md": 8,
          "lg": 4,
          "type": "checkbox",
          "label": {
            "en": "Hide logo"
          }
        },
        "loginMotto": {
          "newLine": true,
          "sm": 12,
          "md": 8,
          "lg": 4,
          "type": "text",
          "label": {
            "en": "Own motto"
          }
        },
        "loginBackgroundImage": {
          "newLine": true,
          "sm": 12,
          "md": 8,
          "lg": 4,
          "type": "checkbox",
          "label": {
            "en": "Use background image"
          }
        },
        "login-bg.png": {
          "newLine": true,
          "type": "image",
          "hidden": "!data.loginBackgroundImage",
          "sm": 12,
          "md": 8,
          "lg": 4,
          "accept": "image/*",
          "label": {
            "en": "Upload image"
          },
          "crop": true
        }
      }
    },
    "instancesTab": {
      "type": "panel",
      "label": {
        "en": "Access to instances"
      },
      "items": {
        "_text1": {
          "type": "staticText",
          "text": {
            "en": "There is a option to allow access to the specific configuration pages of selected instances."
          }
        },
        "accessLimit": {
          "newLine": true,
          "type": "checkbox",
          "label": {
            "en": "Allow access only to specific instances"
          }
        },
        "applyRights": {
          "newLine": true,
          "type": "checkbox",
          "label": {
            "en": "Apply access rights for selected instances"
          }
        },
        "accessAllowedConfigs": {
          "newLine": true,
          "type": "custom",
          "component": "customInstancesEditor"
        }
      }
    }
  }
}